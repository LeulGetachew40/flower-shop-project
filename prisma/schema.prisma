generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["users", "items"]

}

model User {
  userID      String   @id @default(uuid())
  name        String
  dateOfBirth DateTime @default(now())
  email       String   @unique
  password    String
  userType    USERTYPE

  @@schema("users")
}

// try to add 1-1 relationships among discounts and items

model Items {
  itemID        String      @id @default(uuid())
  name          String      @unique
  price         Float
  stock         Int
  inStock       Boolean
  itemCreatedAt DateTime    @default(now())
  itemUpdatedAt DateTime    @updatedAt
  itemSlug      String?     @unique
  Discounts     Discounts[]

  @@schema("items")
}

model Discounts {
  discountID    String @id @default(uuid())
  discountValue Float
  item          Items  @relation(fields: [itemID], references: [itemID])
  itemID        String
  promoCode     String

  @@schema("items")
}


enum USERTYPE {
  CUSTOMER
  ADMIN
  CLERK

  @@schema("users")
}